<div class="panel-heading">
  <div class="navbutton"><a href="javascript: void(0);" class="moveday" data-day="-1">&lt;&lt;&lt;</a></div>
  <div class="daydescription"><a href="javascript: void(0);" class="moveday" data-day="0">{{dayname}}</a></div>
  <div class="navbutton"><a href="javascript: void(0);" class="moveday" data-day="1">&gt;&gt;&gt;</a></div>
</div>
<div class="panel-body">
  {{#if notes}}
    <h3>Notes/events</h3>
    {{#each notes}}
      {{> main.daynote}}
    {{/each}}
  {{/if}}


  <h3>Lessons</h3>
  {{#if lessons}}
    {{#each lessons}}
      <div class="lesson"><span style="font-weight: bold; display: inline-block;">{{humanReadableIndex startperiod}}{{#ifnoteq startperiod endperiod}}-{{humanReadableIndex endperiod}}{{/ifnoteq}} ({{starttome.[0]}}:{{doubleDigit starttome.[1]}}-{{endtome.[0]}}:{{doubleDigit endtome.[1]}}): {{#if subject}}{{subject}}{{/if}}</span><span style="display: inline-block;">{{#if teacher}} - {{teacher}}{{/if}}{{#if location}} - {{location}}{{/if}}</span></div>
    {{/each}}
  {{else}}
    No Lessons
  {{/if}}

  <h3>Homework</h3>
  {{#if homework}}
    {{#each homework}}
      {{> main.homeworkitem}}
    {{/each}}
  {{else}}
    No homework due in.
  {{/if}}
</div>
