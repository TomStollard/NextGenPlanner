<div class="modal-dialog">
  <div class="modal-content">
    <form class="form-horizontal">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span>&tomes;</span></button>
        <h4 class="modal-title">Edit Note</h4>
      </div>
      <div class="modal-body">
        <input type="hidden" name="id" value="{{note._id}}"></input>
        <div class="form-group">
          <label for="day" class="col-xs-2">Day</label>
          <div class="col-xs-10">
            <input class="form-control" type="text" name="day" value="{{formatDate note.daytome "D MMMM, YYYY"}}"></input>
          </div>
        </div>
        <div class="form-group">
          <label for="tome" class="col-xs-2">Tome</label>
          <div class="col-xs-10">
            <input class="form-control" type="text" name="tome" value="{{note.tome}}"></input>
          </div>
        </div>
        <div class="notes quill-container">
          <div class="toolbar">
            <span class="ql-format-group"><span title="Link" class="ql-format-button ql-link"></span><span class="ql-format-separator"></span><span title="Image" class="ql-format-button ql-image"></span><span class="ql-format-separator"></span><span title="List" class="ql-format-button ql-list"></span></span>
          </div>
          <div class="editor">{{{note.notes}}}</div>
        </div>
      </div>
      <div class="modal-footer">
        <input type="button" class="btn btn-danger" value="Delete" name="delete"></input>
        <input type="submit" class="btn btn-default" value="Save"></input>
      </div>
    </form>
  </div>
</div>
