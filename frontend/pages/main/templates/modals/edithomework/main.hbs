<div class="modal-dialog">
  <div class="modal-content">
    <form class="form-horizontal">
      <input type="hidden" name="id" value="{{homework._id}}"></input>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span>&tomes;</span></button>
        <h4 class="modal-title">Edit Homework</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="setpicker" class="col-xs-2 control-label">Set</label>
          <div class="col-xs-10">
            <div style="position: relative;">
              <input type="text" name="setpicker" value="{{formatDate homework.set "D MMMM, YYYY"}}" class="form-control"></input>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="duepicker" class="col-xs-2 control-label">Due</label>
          <div class="col-xs-10">
            <div style="position: relative;">
              <input type="text" name="duepicker" value="{{formatDate homework.due "D MMMM, YYYY"}}" class="form-control"></input>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="subject" class="col-xs-2 control-label">Subject</label>
          <div class="col-xs-10">
            <div style="position: relative;">
              <input type="text" class="form-control" name="subject" value="{{homework.subject}}"></input>
            </div>
          </div>
        </div>
        <label id="homeworkcontentlabel">Homework:</label>
        <div class="homeworkcontent quill-container">
          <div class="toolbar">
            <span class="ql-format-group"><span title="Link" class="ql-format-button ql-link"></span><span class="ql-format-separator"></span><span title="Image" class="ql-format-button ql-image"></span><span class="ql-format-separator"></span><span title="List" class="ql-format-button ql-list"></span></span>
          </div>
          <div class="editor">
            {{{homework.homework}}}
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <input type="submit" class="btn btn-default" value="Save"></input>
      </div>
    </form>
  </div>
</div>
