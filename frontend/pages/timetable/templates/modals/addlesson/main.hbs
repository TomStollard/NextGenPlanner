<div class="modal-dialog">
  <div class="modal-content">
    <form class="form-horizontal">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span>&tomes;</span></button>
        <h4 class="modal-title">Add Lesson</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="setpicker" class="col-xs-2 control-label">Subject</label>
          <div class="col-xs-10">
            <div style="position: relative;">
              <input type="text" name="subject" value="" class="form-control autocomplete-input"></input>
              <input type="text" name="subject-suggest" disabled="true" value="" class="form-control autocomplete-suggest"></input>
              <div style="height: 34px;"></div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="setpicker" class="col-xs-2 control-l  abel">Teacher</label>
          <div class="col-xs-10">
            <div style="position: relative;">
              <input type="text" name="teacher" value="" class="form-control autocomplete-input"></input>
              <input type="text" name="teacher-suggest" disabled="true" value="" class="form-control autocomplete-suggest"></input>
              <div style="height: 34px;"></div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="setpicker" class="col-xs-2 control-label">Location</label>
          <div class="col-xs-10">
            <div style="position: relative;">
              <input type="text" name="location" value="" class="form-control" value="location "></input>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="subject" class="col-xs-2 control-label">Start Period</label>
          <div class="col-xs-10">
            <div style="position: relative;">
              <select class="form-control" name="startperiod">
                {{#each periods}}
                  <option value="{{@index}}" {{#ifeq @index ../defaultperiod}}selected="selected"{{/ifeq}}>{{humanReadableIndex @index}}</option>
                {{/each}}
              </select>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="subject" class="col-xs-2 control-label">End Period</label>
          <div class="col-xs-10">
            <div style="position: relative;">
              <select class="form-control" name="endperiod">
                {{#each periods}}
                  <option value="{{@index}}" {{#ifeq @index ../defaultperiod}}selected="selected"{{/ifeq}}>{{humanReadableIndex @index}}</option>
                {{/each}}
              </select>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="subject" class="col-xs-2 control-label">Day</label>
          <div class="col-xs-10">
            <div style="position: relative;">
              <select class="form-control" name="day">
                {{#each days as |day|}}
                  <option value="{{day}}" {{#ifeq day ../defaultday}}selected="selected"{{/ifeq}}>{{dayName day}}</option>
                {{/each}}
              </select>
            </div>
          </div>
        </div>
        {{#if weekmode}}
          <div class="form-group">
            <label for="subject" class="col-xs-2 control-label">Week</label>
            <div class="col-xs-10">
              <div style="position: relative;">
                <input type="number" value="{{humanReadableIndex defaultweek}}" min="1" max="{{numweeks}}" class="form-control" name="week"></input>
              </div>
            </div>
          </div>
        {{/if}}
      </div>
      <div class="modal-footer">
        <input type="submit" class="btn btn-default submit" value="Add"></input>
      </div>
    </form>
  </div>
</div>
