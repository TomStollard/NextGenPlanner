<form class="form-horizontal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span>&tomes;</span></button>
        <h4 class="modal-title">Add Lesson</h4>
      </div>
      <div class="modal-body">
        <div class="form-group row">
          <label for="setpicker" class="col-xs-2 control-label">Subject</label>
          <div class="col-xs-10">
            <div style="position: relative;">
              <input type="text" name="subject" value="" class="form-control" style="position: absolute; z-index: 2; background: transparent;"></input>
              <input type="text" name="subject-suggest" disabled="true" value="" class="form-control" style="position: absolute; z-index: 1; color: lightgrey; background: white;"></input>
              <div style="height: 34px;"></div>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <label for="setpicker" class="col-xs-2 control-label">Teacher</label>
          <div class="col-xs-10">
            <div style="position: relative;">
              <input type="text" name="teacher" value="" class="form-control"></input>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <label for="setpicker" class="col-xs-2 control-label">Location</label>
          <div class="col-xs-10">
            <div style="position: relative;">
              <input type="text" name="location" value="" class="form-control" value="location "></input>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <label for="subject" class="col-xs-2 control-label">Period</label>
          <div class="col-xs-10">
            <div style="position: relative;">
              <select class="form-control" name="period">
                {{#each periods}}
                  <option value="{{@index}}">{{humanReadableIndex @index}}</option>
                {{/each}}
              </select>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <label for="subject" class="col-xs-2 control-label">Day</label>
          <div class="col-xs-10">
            <div style="position: relative;">
              <select class="form-control" name="day">
                {{#each days as |day|}}
                  <option value="{{day}}">{{dayName day}}</option>
                {{/each}}
              </select>
            </div>
          </div>
        </div>
        {{#if weekmode}}
          <div class="form-group row">
            <label for="subject" class="col-xs-2 control-label">Week</label>
            <div class="col-xs-10">
              <div style="position: relative;">
                <input type="number" min="1" max="{{numweeks}}" class="form-control" value="1"></input>
              </div>
            </div>
          </div>
        {{/if}}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default submit">Add</button>
      </div>
    </div>
  </div>
</form>
