<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal"><span>&tomes;</span></button>
      <h4 class="modal-title">Options</h4>
    </div>
    <div class="modal-body">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#options-tometable-main" data-toggle="tab">Day/Week Layout</a></li>
        <li><a href="#options-tometable-periods" data-toggle="tab">Periods</a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane fade in active" id="options-tometable-main">
          {{#each days}}
            <input type="checkbox" {{#if this.active}}checked{{/if}} name="dayselect-{{this.num}}" class="dayselect">{{this.name}}</input><br>
          {{/each}}
          <form class="form-horizontal">
            <div class="form-group">
              <label for="username" class="col-xs-2 control-label">Username</label>
              <div class="col-xs-10">
                <div style="position: relative;">
                  <input type="text" name="username" value="{{user.username}}" disabled class="form-control"></input>
                </div>
              </div>
            </div>
            <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span> If you would like to change your username, please contact an administrator.</div>
            <div class="form-group">
              <label for="name" class="col-xs-2 control-label">Name</label>
              <div class="col-xs-10">
                <div style="position: relative;">
                  <input type="text" name="name" value="{{user.name}}" class="form-control"></input>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="email" class="col-xs-2 control-label">Email address</label>
              <div class="col-xs-10">
                <div style="position: relative;">
                  <input type="text" name="email" value="{{user.email}}" class="form-control"></input>
                </div>
              </div>
            </div>
            <input type="submit" class="btn btn-default" value="Save"></input>
          </form>
        </div>
        <div class="tab-pane fade" id="options-tometable-periods">
          
        </div>
      </div>
    </div>
  </div>
</div>
